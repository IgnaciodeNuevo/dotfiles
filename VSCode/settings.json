{
  "files.exclude": {
      "**/*.js": {
          "when": "$(basename).ts"
      },
      "**/*.js.map": true
  },
  "editor.autoIndent": true,
  "editor.colorDecorators": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.detectIndentation": false,
  "editor.fontFamily": "Input, 'Courier New', monospace",
  "editor.fontSize": 18,
  "editor.fontWeight": "400",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": true,
  "editor.lineHeight": 26,
  "editor.links": true,
  "editor.matchBrackets": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
  },
  "editor.overviewRulerBorder": true,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "none",
  "editor.selectionHighlight": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  // Workbench
  "workbench.colorTheme": "TronLegacy",
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",
  // Window
  "window.restoreFullscreen": true,
  // Files
  "files.autoSave": "off",
  "files.hotExit": "onExit",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": false,
  // Guides
  "guides.active.color.dark": "#ffd300",
  "guides.active.enabled": true,
  "guides.normal.color.dark": "#333333",
  "guides.sendUsagesAndStats": false,
  // File Explorer
  "explorer.sortOrder": "type",
  // HTML
  "html.suggest.html5": true,
  // Markdown
  "markdown.preview.fontSize": 18,
  "markdown.preview.lineHeight": 26,
  // CSS
  "css.lint.emptyRules": "error",
  "css.lint.idSelector": "warning",
  "css.lint.important": "warning",
  "css.lint.zeroUnits": "warning",
  "css.validate": true,
  // SCSS
  "scss.lint.emptyRules": "error",
  "scss.lint.idSelector": "warning",
  "scss.lint.important": "warning",
  "scss.lint.zeroUnits": "warning",
  "scss.validate": true,
  // SCSS Scan
  "scss.showErrors": true,
  // Terminal
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 18,
  // Path-IntelliSense
  "path-intellisense.showHiddenFiles": true,
  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": false,
  "eslint.options": {},
  "eslint.run": "onSave",
  // Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  // StyleLint
  "stylelint.enable": true,
  // Auto Rename Tag
  "auto-rename-tag.activationOnLanguage": [
      "*"
  ],
  "window.zoomLevel": 0,
  "extensions.ignoreRecommendations": true,
  "telemetry.enableTelemetry": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.activityBar.visible": true,
  "git.confirmSync": false,
  "gitlens.keymap": "alternate",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true
}
